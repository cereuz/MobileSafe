<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/maquee_text"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:id="@+id/iv_bn_delete"
        android:layout_width="51dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:clickable="false"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_bn_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/title_size"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_bn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_bn_delete"
        android:layout_alignParentStart="true"
        android:text="@string/app_name"
        android:textSize="@dimen/item_margin" />

    <TextView
        android:id="@+id/tv_bn_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/maquee_text"
        android:layout_toEndOf="@+id/tv_bn_phone"
        android:layout_marginStart="@dimen/title_size"
        android:text="TextView" />

</RelativeLayout>
