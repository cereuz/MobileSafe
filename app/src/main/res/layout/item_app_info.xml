<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/maquee_text"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:id="@+id/iv_appinfo_icon"
        android:layout_width="51dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_appinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:layout_marginStart="62dp"
        android:text="@string/app_name"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/tv_appinfo_issdcard"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_appinfo_icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:text="@string/app_name"
        android:textSize="@dimen/item_margin" />

    <TextView
        android:id="@+id/tv_appinfo_packagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_appinfo_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

</RelativeLayout>
